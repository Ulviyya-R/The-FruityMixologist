@using TheFruityMixologist.ViewModels;
@model RegisterVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Dashboard V.1 | Nalika - Material Admin Template</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- favicon
        ============================================ -->
    <link rel="shortcut icon" type="image/x-icon" href="~/admin/assets/img/favicon.ico">
    <!-- Google Fonts
        ============================================ -->
    <link href="~/admin/assets/https://fonts.googleapis.com/css?family=Roboto:100,300,400,700,900" rel="stylesheet">
    <!-- Bootstrap CSS
        ============================================ -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/admin/assets/css/bootstrap.min.css">
    <!-- Bootstrap CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/font-awesome.min.css">
    <!-- nalika Icon CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/nalika-icon.css">
    <!-- owl.carousel CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/owl.carousel.css">
    <link rel="stylesheet" href="~/admin/assets/css/owl.theme.css">
    <link rel="stylesheet" href="~/admin/assets/css/owl.transitions.css">
    <!-- animate CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/animate.css">
    <!-- normalize CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/normalize.css">
    <!-- meanmenu icon CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/meanmenu.min.css">
    <!-- main CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/main.css">
    <!-- morrisjs CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/morrisjs/morris.css">
    <!-- mCustomScrollbar CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/scrollbar/jquery.mCustomScrollbar.min.css">
    <!-- metisMenu CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/metisMenu/metisMenu.min.css">
    <link rel="stylesheet" href="~/admin/assets/css/metisMenu/metisMenu-vertical.css">
    <!-- calendar CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/calendar/fullcalendar.min.css">
    <link rel="stylesheet" href="~/admin/assets/css/calendar/fullcalendar.print.min.css">
    <!-- style CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/style.css">
    <!-- responsive CSS
        ============================================ -->
    <link rel="stylesheet" href="~/admin/assets/css/responsive.css">
    <!-- modernizr JS
        ============================================ -->
    <script src="js/vendor/modernizr-2.8.3.min.js"></script>
</head>
<body>
    <div class="color-line"></div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="back-link back-backend">
                    <a href="index.html" class="btn btn-primary">Back to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12"></div>
            <div class="col-md-6 col-md-6 col-sm-6 col-xs-12">
                <div class="text-center custom-login">
                    <h3>Registration</h3>
                    <p>Admin template with very clean and aesthetic style prepared for your next app. </p>
                </div>
                <div class="hpanel">
                    <div class="panel-body">
                        <form asp-area="MixologistArea" asp-controller="AdminLogin" asp-action="Register" method="post" id="loginForm" enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-lg-12"> 
                                    <input asp-for="ProfilePicture" accept="image/*" />
                                    <span asp-validation-for="ProfilePicture" class="text-danger"></span>
                                </div>
                                <div class="form-group col-lg-6">
                                    <label style="color:#152036" asp-for="Firstname">Firstname</label>
                                    <input asp-for="Firstname" placeholder="Firstname" class="form-control">
                                </div>
                                <div class="form-group col-lg-6">
                                    <label style="color:#152036" asp-for="Lastname">Lastname</label>
                                    <input asp-for="Lastname" placeholder="Lastname" class="form-control">
                                </div>
                                <div class="form-group col-lg-6">
                                    <label style="color:#152036" asp-for="Username">Username</label>
                                    <input asp-for="Username" placeholder="Username" class="form-control">
                                </div>
                                <div class="form-group col-lg-6">
                                    <label style="color:#152036" asp-for="Email">Email Address</label>
                                    <input asp-for="Email" placeholder="Email Address" class="form-control">
                                </div>
                                <div class="form-group col-lg-6">
                                    <label style="color:#152036" asp-for="Password">Password</label>
                                    <input asp-for="Password" placeholder="Password" type="password" class="form-control">
                                </div>
                                <div class="form-group col-lg-6">
                                    <label style="color:#152036" asp-for="ConfirmPassword">Repeat Password</label>
                                    <input asp-for="ConfirmPassword" placeholder="Repeat Password" type="password" class="form-control">
                                </div>
                                
                                <div class="checkbox col-lg-12">
                                    <input asp-for="Terms"  type="checkbox" class="i-checks" checked> Sigh up for our newsletter
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-success loginbtn">Register</button>
                                <button class="btn btn-default">Cancel</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12"></div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <p>Copyright © 2018 <a href="https://colorlib.com/wp/templates/">Colorlib</a> All rights reserved.</p>
            </div>
        </div>
    </div>

</body>
</html>
