@model List<Recipe>

@foreach(Recipe recipe in Model){
    <div class="col-lg-3">
        <div class="product">
            <div class="image" style="width:260px;height:320px">
                <a asp-controller="Shop" asp-action="Detail" asp-route-id="@recipe.Id">
                    <img style="width: 100%; height:100%"
                     src="~/assets/photos/Recipes/@recipe.RecipesImages.FirstOrDefault(ri=>ri.IsMain==true)?.Path" />
                </a>
               
            </div>
            <div class="categoryName">
                @foreach (var recipeCategorys in recipe.RecipesCategories)
                {
                    <span>@recipeCategorys.Category.Name</span>
                }
            </div>
            <div class="productName"><span>@recipe.Name</span></div>
            <div class="price"><span>$8.99</span></div>
        </div>
    </div>

}