@model TheFruityMixologist.ViewModels.EventSliderVM

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>EventSliderVM</h4>
    <hr />
    <div class="row">
        <div class="row images my-4">
            @foreach (var image in Model.AllImages)
            {
                <div class="col-2">
                    <div class="card" style="width:152px">
                        <img style="width:150px;height:150px;object-fit:contain" src="~/assets/photos/partyEvents/@image.Path" class="card-img-top" />

                    </div>
                </div>
            }
        </div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EventData)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EventData)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
