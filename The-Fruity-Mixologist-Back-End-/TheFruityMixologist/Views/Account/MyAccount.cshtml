@model UserVM
@{
    ViewData["Title"] = "MyAccount";
}


<main>
    <section id="MyAccount">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="image">
                        <img width="100%"
                             src="~/assets/photos/myAccount/Rectangle 908.png"
                             alt="" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="account">
                        <div class="center">
                            <div class="title">Account Details</div>
                            <div class="col-lg-12">
                                <div class="cardd">
                                    <div class="card-body">
                                        <h3>Personal Info</h3>
                                        <div class="user-photo">
                                           <img class="primary-img" style="width:100px;height:100px; object-fit:contain"
                     src="~/assets/photos/myAccount/@Model.Path"
                     alt="User Image" />
                                        </div>
                                        <p>
                                            <b>Username:</b>@Model.Username<br />
                                            <b>E-mail:</b>@Model.Email<br><br>
                                        </p>
                                    </div>
                                    <div class="mt-2 clearfix">
                                        <a asp-controller="Account" asp-action="Settings"><i class="icon-pencil"></i>Edit</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               
        </div>
    </section>
</main>
