@model List<Recipe>

@foreach(Recipe recipe in Model){
    <div class="col-3">
        <div class="product">
            <div class="image">
                <a asp-controller="Shop" asp-action="Detail" asp-route-id="@recipe.Id">
                    <img style="width: 100%"
                     src="~/assets/photos/Recipes/@recipe.RecipesImages.FirstOrDefault(ri=>ri.IsMain==true)?.Path" />
                </a>
            </div>
            <div class="product-name">
                @string.Concat(recipe.Desc.Substring(0, 8), "...")
            </div>
            <div class="product-price">
                $@recipe.Price
            </div>
        </div>
    </div>
}
